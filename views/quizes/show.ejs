<form method="get" action="/quizes/<%= quiz.id %>/answer">
    Pregunta: <%= quiz.pregunta %>
    <br/>
    Tematica: <%= quiz.tema %>
    <br/>
    <br/>
    <input type="text" name="respuesta" id="respuesta" placeholder="Responda aqui"/>
    <input type="submit" value="Enviar"/>
</form>
<p>
    <a href="/quizes/<%= quiz.id %>/comments/new">
        <button>Nuevo comentario</button>
    </a>
</p>
<p>
    <strong>Comentarios:</strong>
</p>

<% for(var index in quiz.Comments){ %>
    <% if(quiz.Comments[index].publicado){ %>
        <p><%= quiz.Comments[index].texto %></p>
    <% }else if(session.user && session.user.username === "admin"){ %>
        <p>- <%= quiz.Comments[index].texto %>
            <a href="/quizes/<%= quiz.id %>/comments/<%=quiz.Comments[index].id%>/publish">
                <button>Publicar</button>
            </a>
        </p>
    <% } %>

<% } %>

